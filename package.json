{
  "name": "double-agent",
  "version": "0.2.8",
  "private": true,
  "description": "Double agent is a detection system for when an http request or browser interaction is not the user agent it says it is",
  "scripts": {
    "build": "tsc --build",
    "watch": "tsc -w",
    "docs": "node docs/generator",
    "test": "node scrapers/lib/runAll.js",
    "profile": "yarn workspace @double-agent/profiler start",
    "cleanProfiles": "rm -rf detections/*/*/profiles/*.json",
    "lintProfiles": "prettier --write detections/*/*/profiles/**.json",
    "start": "yarn workspace @double-agent/runner start",
    "prod": "yarn workspace @double-agent/runner prod",
    "updateUseragent": "node node_modules/useragent/bin/update.js",
    "postinstall": "yarn updateUseragent",
    "clean": "tsc -b --clean"
  },
  "author": "Data Liberation Foundation",
  "license": "ISC",
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "cookie": "^0.4.0",
    "useragent": "^2.3.0",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "request": "^2.88.2",
    "yamlparser": "0.0.x",
    "@types/cookie": "^0.3.3",
    "@types/useragent": "^2.1.1",
    "p-queue": "^6.2.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^12.7.11",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^1.18.9",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.8.0",
    "source-map-support": "^0.5.16",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-plugin-prettier": "^2.0.1",
    "@types/puppeteer": "~1.19.1",
    "typescript": "^3.8.3"
  },
  "workspaces": [
    "detections/*/*",
    "runner",
    "profiler"
  ],
  "lint-staged": {
    "linters": {
      "./**/*.ts": [
        "tslint --format verbose",
        "git add"
      ],
      "./**/*.json": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/**/profiles/*.json",
      "scrapers/**/sessions/*.json",
      "scrapers/**/browser-flags/*.json",
      "**/types/*.js",
      "**/types/*.d.ts",
      "**/results/*.json"
    ]
  }
}
